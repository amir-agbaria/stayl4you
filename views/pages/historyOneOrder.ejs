<%  var orderDetails = order.orderDetails;
    var items = order.items;
%>
<link rel="stylesheet" href="/css/historyOneOrder.css">
<div class="container">
    <h1>פרטי הזמנה</h1>
    <div class="mb-2">
        <a href="/history" class="btn btn-primary">חזרה להזמנות</a>
        <button class="btn btn-danger" onclick="onDeleteOrderDetails(<%-order._id%>)">מחק פרטי הזמנה</button>
    </div>
    <div class="card p-2 mb-2">
        <div class="card-header fw-bold">
            <div class="d-flex">
                <p class="m-0 ms-1 ">מספר הזמנה:</p>
                <p class="m-0"><%- order._id%></p>
            </div>
            <div class="d-flex">
                <p class="ms-1 m-0">תאריך הזמנה:</p>
                <p class="m-0"><%- order.orderDate.toString().substring(0, 15) %></p>
            </div>
        </div>
        <div class="card-body">
            <div class="box d-flex">
                <p class="fw-bold ms-1">שם:</p>
                <p ><%-orderDetails.firstName + ' ' + orderDetails.lastName  %></p>
            </div>
            <div class="box">
                <div class="d-flex">
                    <p class="fw-bold ms-1">טלפון:</p>
                    <p ><%- orderDetails.phone %></p>
                </div>
                <div class="d-flex">
                    <p class="fw-bold ms-1">אימייל:</p>
                    <p ><%- orderDetails.email %></p>
                </div>
            </div>
            <div class="box">
                <p class="fw-bold">כתובת:</p>
                <div class="me-1">
                    <p class="mb-1"><%- orderDetails.address.city + ', ' + orderDetails.address.street %></p>
                    <p class="m-0"><%- orderDetails.address.state + ', ' + orderDetails.address.zipCode %></p>
                </div>
            </div>
        </div>
    </div>
    <div class="card">
        <div class="card-header fw-bold">פריטים</div>
        <div class="card-body">
            <%-include('../partials/orderTableItems', {itemsCart: items})-%>
        </div>
    </div>
</div>

<script>
    var order = <%-JSON.stringify(order)%>;
    console.log(order);
</script>
<script src="/js/historyOneOrder.js"></script>